@using MebelDesign71.Common
@using MebelDesign71.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (this.SignInManager.IsSignedIn(this.User))
{
    if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Administration" asp-controller="AdminMessages" asp-action="Index" title="Admin">Admin</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Orders" asp-action="Index"  title="Oders">Мойте поръчки</a>
        </li>  
    }
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
            <button type="submit" class="nav-link btn btn-link text-white"><b>Изход</b></button>
        </form>
    </li>
}
else
{

    <li>
        <a class="nav-link text-left" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li>
        <a class="nav-link text-left" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}
