@{ this.ViewData["Title"] = "Projects";}

<div class="intro-section site-blocks-cover innerpage" style="background-image: url('../images/project_1.jpg');">
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-lg-12 mt-5" data-aos="fade-up">
                <h1 class="text-uppercase">Как го правим</h1>
                <p class="text-white text-center">
                    <a asp-controller="Home" asp-action="Index">Начало</a>
                    <span class="mx-2">/</span>
                    <span>Реализирани проекти</span>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="blog-entry-contents text-center mt-5">
    <h3 class="">
        Разгледайте нашите галерии със снимки на проекти за обзавеждане по поръчка.
    </h3>
</div>


<!--Start Gallery-->
<div class="site-section">
    <div class="container">
        <div class="row mb-1 justify-content-center text-center">
        </div>
        <div class="row">

            @foreach (var category in this.ViewData["projects"] as IList<MebelDesign71.Web.ViewModels.Projects.ProjectViewModel>)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="project-item">
                        <div class="project-item-contents">
                            <a href="../Projects/Gallery?projectId=@category.Id">
                                <h2 class="project-item-title">
                                    @category.Name
                                </h2>
                                <span class="project-item-category">галерия</span>
                            </a>
                        </div>
                        <img src=@category.HeadImage alt="Image" class="img-fluid" >
                    </div>
                </div>
            }

        </div>
    </div>
</div>