@model MebelDesign71.Web.ViewModels.Projects.ProjectInputModel

@{this.ViewData["Title"] = Model.Name; }


<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-4">
                <img src=@Model.ImagePath alt="Image" class="img-fluid" asp-append-version="true">
            </div>
            <div class="col-md-4 ml-auto">
                <h2 class="text-black mb-4 text-center">Как Създаваме @Model.Name</h2>
                <p class="text-center">@Model.Description</p>
                <p class="text-center"><a href="../Projects/Gallery?id=@Model.Id&projectName=@Model.Name" class="btn btn-primary rounded-0 py-3 px-5">Галерия</a></p>
            </div>
        </div>
    </div>
</div>