@model MebelDesign71.Web.ViewModels.Messages.MessageInputModel
@using MebelDesign71.Common
@{ this.ViewData["Title"] = "Contacts";}


<div class="intro-section site-blocks-cover innerpage" style="background-image: url('../images/contact_1.jpg');">
    <div class="container">
        <div class="row align-items-center text-center border">
            <div class="col-lg-12 mt-5" data-aos="fade-up">
                <h1 class="text-uppercase">Връзка с нас</h1>
                <p class="text-white text-center">
                    <a asp-controller="Home" asp-action="Index">Начало</a>
                    <span class="mx-2">/</span>
                    <span>Контакти</span>
                </p>
            </div>
        </div>
    </div>
</div>


<div class="site-section services-1-wrap">
    <div class="container">
        <div class="row no-gutters">

            <div class="col-lg-3 col-md-6">
                <div class="service-1">
                    <div class="service-1-icon">
                        <span class="flaticon-location"></span>
                    </div>
                    <div class="service-1-content">
                        <h3 class="service-heading">Адрес</h3>
                        <p> @InfoConstant.Sity <br /> @InfoConstant.Address</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="service-1">
                    <div class="service-1-icon">
                        <span class="flaticon-phone"></span>
                    </div>
                    <div class="service-1-content">
                        <h3 class="service-heading">Телефон</h3>
                        <p>@InfoConstant.FirstPhoneNumber<br />
                        @InfoConstant.SecondPhoneNumber</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="service-1">
                    <div class="service-1-icon">
                        <span class="flaticon-mail"></span>
                    </div>
                    <div class="service-1-content">
                        <h3 class="service-heading">Имейл</h3>
                        <p>@InfoConstant.FirstEmail<br /> @InfoConstant.SecondEmail</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="service-1">
                    <div class="service-1-icon">
                        <span class="flaticon-worker"></span>
                    </div>
                    <div class="service-1-content">
                        <h3 class="service-heading">Работно време</h3>
                        <p>
                            Понеделник-Петък 9.00 - 17.00
                            <br> Събота 9.00 - 12.00
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<form asp-controller="Messages" asp-action="Index" method="post">
    <div class="site-section">
        <div class="container">

            <div class="row mb-5 justify-content-center text-center">
                <div class="col-lg-5">
                    <h3 class="section-subtitle">Имате въпрос ?<br> Пишете ни.</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control form-control-lg">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control form-control-lg">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control form-control-lg">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="About"></label>
                    <input asp-for="About" class="form-control form-control-lg">
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" cols="30" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <p>
                Натискайки бутона "Изпратете", вие потвърждавате, че сте запознати и съгласни с нашата политика за опазване на личните данни<br />
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика за опазване на личните данни</a>
            </p>

            <input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary rounded-0 px-3 px-5">Изпрати</button>
                </div>
            </div>

        </div>
    </div>
</form>



