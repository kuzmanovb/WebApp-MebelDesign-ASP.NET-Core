@model MebelDesign71.Web.ViewModels.Service.ServiceInputModel
@{ ViewData["Title"] = "Service";}

<div class="intro-section site-blocks-cover innerpage" style="background-image: url('../images/services_1.jpg');">
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-lg-12 mt-5" data-aos="fade-up">
                <h1 class="text-uppercase">Какво правим</h1>
                <p class="text-white text-center">
                    <a href="index.html">Начало</a>
                    <span class="mx-2">/</span>
                    <span>Услуги</span>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            @foreach (var item in ViewData["services"] as IList<MebelDesign71.Web.ViewModels.Service.ServiceInputModel>)
            {
                <div class="col-md-6 mb-5 mb-lg-5 col-lg-4">
                    <div class="blog-entry">
                        <a href="/Services/CurrentService?id=@item.Id" class="img-link">
                            <img src=@item.ImagePath alt="Image" class="img-fluid">
                        </a>
                        <div class="blog-entry-contents">
                            <h3><a href="/Services/CurrentService?id=@item.Id">@item.Name</a></h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>