@model MebelDesign71.Web.ViewModels.Information.ReviewInputModel;
@using MebelDesign71.Data.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{ViewData["Title"] = "Add Review"; }

<form asp-controller="Information" asp-action="AddReview" method="post" enctype="multipart/form-data">
    <div class="site-section">
        <div class="container">
            <input type="hidden" asp-for="UserId" value=@UserManager.GetUserId(User) />
            <div class="row mb-5 justify-content-center text-center mt-5">
                <div class="col-lg-12">
                    <h3 class="section-subtitle">
                        Вашето мнение е важно за нас<br />
                        Позитивна или негативна, обратната връзка е добре дошла.<br />
                        Ние ценим времето, което отделяте, за да ни дадете обратна връзка.
                    </h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control form-control-lg">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <p>Тук може да качите профилна снимка към коментара</p>
                    <label asp-for="ImageFile"></label>
                    <input asp-for="ImageFile" class="btn btn-outline-primary" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <p class="text-info">Снимката която качвате трябва да бъде в jpg, jpeg или png фомат.</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" cols="30" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary rounded-0 px-3 px-5">Публикувай</button>
                </div>
            </div>

        </div>
    </div>
</form>

