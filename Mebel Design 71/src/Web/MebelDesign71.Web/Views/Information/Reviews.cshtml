@model MebelDesign71.Web.ViewModels.Information.ReviewViewModel
@using MebelDesign71.Common
@using MebelDesign71.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


@{ this.ViewData["Title"] = "Review";}


<div class="intro-section site-blocks-cover innerpage" style="background-image: url('../images/response_1.jpg');">
    <div class="container">
        <div class="row align-items-center text-center border">
            <div class="col-lg-12 mt-5" data-aos="fade-up">
                <h1 class="text-uppercase">Какво казват нашите клиенти за нас ?</h1>
                <p class="text-white text-center">
                    <a asp-controller="Home" asp-action="Index">Начало</a>
                    <span class="mx-2">/</span>
                    <span>Отзиви</span>
                </p>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">

        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-12">
                <h3 class="section-subtitle">Ако сте ползвали нашите услуги<br><a asp-area="" asp-controller="Information" asp-action="AddReview" type="button" class="btn btn-primary">ТУК</a><br> може да опишете вашите впечатления, относно нас.</h3>
            </div>
        </div>

        <div class="row">

            @if (this.ViewData["Reviews"] != null)
            {

                @foreach (var item in this.ViewData["Reviews"] as IList<MebelDesign71.Web.ViewModels.Information.ReviewViewModel>)
                {
                    <div class="col-md-6 mb-5 mb-md-5">
                        <div class="testimonial">
                            <img src=@item.FilePath alt="" asp-append-version="true">
                            <blockquote>
                                <p>@item.Description</p>
                            </blockquote>
                            <p class="client-name">@item.Name</p>
                            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                            {
                                <a href="/Information/DeleteReview?id=@item.Id" type="button" class="btn btn-danger btn-lg">Изтрии</a>
                            }
                        </div>
                    </div>

                }
            }

        </div>
    </div>
</div>


