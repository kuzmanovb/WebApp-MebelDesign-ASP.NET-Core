@using MebelDesign71.Common


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - @GlobalConstants.SystemName</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

   
    @{ await Html.RenderPartialAsync("_CSS");}

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>С</b>айт</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>О</b>братно към сайта</span>
            </a>

            <partial name="_HeaderNavbar" />
            </header>

            <partial name="_LeftNavigation" />

            @RenderBody()

            <partial name="_Footer" />

        </div>


        @{ await Html.RenderPartialAsync("_JS");}


        @RenderSection("Scripts", required: false)
    </body>
    </html>
