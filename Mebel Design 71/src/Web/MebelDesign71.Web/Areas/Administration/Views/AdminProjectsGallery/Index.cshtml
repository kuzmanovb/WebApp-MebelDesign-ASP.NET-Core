@model MebelDesign71.Web.ViewModels.Projects.ProjectViewModel
@{ ViewData["Title"] = "Projects Galeries"; }


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Управление галериите на проектите
            <small>тук маже да добавите или изтриете снимка към галерията на активен проект </small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-8">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Всички проекти</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Проект</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                 @foreach (var item in ViewData["AllProjects"] as IList<MebelDesign71.Web.ViewModels.Projects.ProjectViewModel>)
                                     {
                                     <tr>
                                         <td>@item.Id</td>
                                         <td>@item.Name</td>
                                         <td><img src="@item.HeadImage" width=150 height=100 asp-append-version="true" /></td>
                                         <td><a class='btn btn-info' href="/Administration/AdminProjectsGallery/Gallery?id=@item.Id">Галерия на проекта</a></td>
                                         <td><a class='btn btn-warning ' href="/Administration/AdminProjectsGallery/AddImage?id=@item.Id">Добави снимка към галерията</a></td>
                                     </tr>
                                 }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
