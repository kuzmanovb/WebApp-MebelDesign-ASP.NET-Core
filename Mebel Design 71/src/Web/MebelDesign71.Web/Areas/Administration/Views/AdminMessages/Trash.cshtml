@using MebelDesign71.Web.ViewModels.Messages
@{ ViewData["Title"] = "Trash"; }

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Поща
        </h1>
        <ol class="breadcrumb">
            <li><a asp-area="Administration" asp-controller="AdminMessages" asp-action="Index"><i class="fa fa-dashboard"></i>Поща</a></li>
            <li class="active">Кошче</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <a asp-controller="AdminMessages" asp-action="Index" class="btn btn-primary btn-block margin-bottom">Обратно към пощата</a>

                <partial name="_MesagesPanelPartial" />
            </div>
            <div class="col-md-9">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Кошче</h3>

                        <div class="box-tools pull-right">
                            <div class="has-feedback">
                                <input type="text" class="form-control input-sm" placeholder="Search Mail">
                                <span class="glyphicon glyphicon-search form-control-feedback"></span>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <tbody>
                                @if (true)
                                {
                                    @foreach (var message in this.ViewData["allDeletedMessages"] as IList<MessageViewModel>)
                                    {
                                          <tr>
                                              <td><input type="checkbox"></td>
                                              <td class="mailbox-name">
                                                  <a asp-area="Administration" asp-controller="AdminMessages" asp-action="Read" asp-route-id=@message.Id>@message.FirstName @message.LastName</a>
                                              </td>
                                              <td class="mailbox-subject">

                                                  @{var description = message.Description;}

                                                  @if (description.Length > 50)
                                                  {
                                                      description = description.Substring(0, 50) + ".....";
                                                  }

                                                  <b>@message.About</b> - @description
                                              </td>
                                              <td>
                                                  <a asp-area="Administration" asp-controller="AdminMessages" asp-action="HardDelete" asp-route-id="@message.Id" type="button" class="btn btn-default"><i class="fa fa-trash-o"></i> Премахни </a>

                                              </td>
                                              <td class="mailbox-attachment"></td>
                                              <td class="mailbox-date">@message.TimeAgo</td>
                                          </tr>
                                     }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


