@model MebelDesign71.Web.ViewModels.Orders.OrderViewModel
@using MebelDesign71.Data.Models

@{ ViewData["Title"] = "Update Order";}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Поръчка номер @Model.Number на @Model.UserEmail</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-area="Administration" asp-controller="AdminOrders" asp-action="UpdateOrder" metod="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="OrderId" />
                            <div class="form-group">
                                <label asp-for="ServiceName"></label>
                                <input asp-for="ServiceName" class="form-control" placeholder="">
                                <span asp-validation-for="ServiceName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatedOn"></label>
                                <input asp-for="CreatedOn" class="form-control" placeholder="">
                                <span asp-validation-for="CreatedOn"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" placeholder="" />
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea cols="40" rows="6" asp-for="Description" class="form-control" placeholder="Въведете описание на проекта "></textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <select asp-for="Progress" asp-items="Html.GetEnumSelectList<Progress>()">
                                    <option selected="selected" value="">Please select</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <h4 class="text-black text-uppercase">Документи</h4>
                                @foreach (var document in Model.Documents)
                                {
                                    <a class="btn btn-primary btn-lg" asp-controller="Orders" asp-action="DownloadDocument" asp-route-id="@document.Id">@document.Name</a>
                                }
                                <p></p>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" value="Промени" class="btn btn-success">Промени</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
